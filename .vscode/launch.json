                "LD_LIBRARY_PATH": "/home/yilong/miniconda3/envs/any6d/nvvm/lib64:/home/yilong/miniconda3/envs/any6d/targets/x86_64-linux/lib:/home/yilong/miniconda3/envs/any6d/targets/x86_64-linux/lib64:/home/yilong/miniconda3/envs/any6d/lib:${env:LD_LIBRARY_PATH}",
