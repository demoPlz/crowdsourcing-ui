            "python": "/home/yilong/miniconda3/envs/any6d/bin/python",
            "justMyCode": false,
            "console": "integratedTerminal",
            "env": {
                "CONDA_PREFIX": "/home/yilong/miniconda3/envs/any6d",
                "CONDA_DEFAULT_ENV": "any6d",
